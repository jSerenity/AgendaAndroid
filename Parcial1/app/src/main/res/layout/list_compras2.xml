<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistroCompra2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/carrito"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:tint="#000000"
            app:srcCompat="@drawable/ic_baseline_shopping_cart_24" />

        <TextView
            android:id="@+id/text_comp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="Lista de Compra"
            android:textColor="#090909"
            android:textSize="20sp"
            android:layout_marginTop="23dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/text_fecha"
            android:layout_width="400dp"
            android:layout_height="50dp"
            android:ems="10"
            android:inputType="date"
            android:text="" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <ImageView
        android:id="@+id/previus_2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:tint="#050505"
        android:onClick="onClickRF"
        app:srcCompat="@drawable/ic_baseline_keyboard_return_24"
         />

    <ImageView
        android:id="@+id/save"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="310dp"
        android:tint="#000000"
        android:onClick="onClickRF"
        app:srcCompat="@drawable/ic_baseline_save_24"
         />
        <ImageView
            android:id="@+id/update"
            android:layout_width="40dp"
            android:layout_height="32dp"
            android:layout_marginLeft="300dp"
            android:tint="#000000"
            android:onClick="onClickRF"
            app:srcCompat="@drawable/ic_baseline_save_24"
            tools:layout_editor_absoluteX="302dp"
            tools:layout_editor_absoluteY="133dp" />
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ListView
            android:id="@+id/listadearti"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            app:layout_constraintVertical_bias="1.0"></ListView>
    </LinearLayout>

</LinearLayout>

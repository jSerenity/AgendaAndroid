<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistroCompra2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/carrito"
            android:layout_width="55dp"
            android:layout_height="49dp"
            android:tint="#000000"
            app:srcCompat="@drawable/ic_baseline_shopping_cart_24" />

        <TextView
            android:id="@+id/text_comp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="Lista de Compra"
            android:textColor="#090909"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/text_fecha"
            android:layout_width="400dp"
            android:layout_height="50dp"
            android:ems="10"
            android:inputType="date"
            android:text="Fecha" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <ImageView
        android:id="@+id/previus_2"
        android:layout_width="40dp"
        android:layout_height="32dp"
        android:tint="#050505"
        app:srcCompat="@drawable/ic_baseline_keyboard_return_24"
        tools:layout_editor_absoluteX="23dp"
        tools:layout_editor_absoluteY="133dp" />

    <ImageView
        android:id="@+id/save"
        android:layout_width="40dp"
        android:layout_height="32dp"
        android:layout_marginLeft="300dp"
        android:tint="#000000"
        android:onClick="onClickRF"
        app:srcCompat="@drawable/ic_baseline_save_24"
        tools:layout_editor_absoluteX="302dp"
        tools:layout_editor_absoluteY="133dp" />
</LinearLayout>


    <ListView
        android:id="@+id/listadearti"
        android:layout_width="wrap_content"
        android:layout_height="446dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</LinearLayout>
